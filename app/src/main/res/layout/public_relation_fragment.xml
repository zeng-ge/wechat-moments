<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <android.support.design.widget.TabLayout
    android:id="@+id/public_relation_activity_tab_header"
    android:layout_width="match_parent"
    app:tabIndicatorColor="@color/publicRelationTabBorderColor"
    app:tabBackground="@android:color/white"
    app:tabTextColor="@color/publicRelationRowContentColor"
    android:layout_height="wrap_content"></android.support.design.widget.TabLayout>

  <android.support.v4.view.ViewPager
    android:id="@+id/public_relation_activity_tab_body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"></android.support.v4.view.ViewPager>
</LinearLayout>
